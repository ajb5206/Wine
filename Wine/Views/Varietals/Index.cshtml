@{
  Layout = "_Layout";
}

@using Wine.Models;
@model List<Wine.Models.Varietal>;

<h1>Varietals</h1>

@if (@Model.Count == 0)
{
  <h3>No varietals have been added yet!</h3>
} 

@foreach (Varietal varietal in Model)
{
  <li>@Html.ActionLink($"{varietal.VarietalName}", "Details", new { id = varietal.VarietalId })</li>
}

<p>@Html.ActionLink("Add new varietal", "Create")</p>